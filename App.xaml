<Application x:Class="WpfSnakeGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfSnakeGame"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#012345</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#123456</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#4F4867</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">#FFFFFF </SolidColorBrush>
        <FontFamily x:Key="MainFont">Assets/#DroidSansMono</FontFamily>
        <local:BooleanToVisibilityConverter  x:Key="BooleanToVisibilityConverter"/>

    </Application.Resources>
</Application>
